#include "testhdr.h"

#test test_5
	  const int CUT = 1;
	  
	  fputs("Multi-thread test 5: Finds and deletes at the same time\n", stderr);
	  
	  prepareVolume();
	  
	  db_handle *db = newDb("dat0.dat", PATHNAME, (SIZE/CUT));
	  
	  pthread_t t1, t2;
	  
	  fputs("Adding random keys and values to database...\n", stderr);
	  
	  randInsert(db);
	  
	  fputs("Looking for keys and deleting other keys...\n", stderr);
	  
	  fail_unless(pthread_create(&t1, NULL, randFind, db) == 0, "Thread 1 Error");
          fail_unless(pthread_create(&t2, NULL, randDelete, db) == 0, "Thread 2 Error");
	  
	  fputs("Joining threads...\n", stderr);
	  
	  fail_unless(pthread_join(t1, NULL) == 0, "Could not join thread 1");
	  fail_unless(pthread_join(t2, NULL) == 0, "Could not join thread 2");
	  
	  fputs("Multi-thread test 5 done.\n", stderr);
