#include "testhdr.h"

#test test_4
	  /* PROBLHMATIKO (den nomizw) */
	  
	  const int CUT = 1;
	  
	  fputs("Multi-thread test 4: Insertion and find at the same time\n", stderr);
	  
	  prepareVolume();
	  
	  db_handle *db = newDb("dat0.dat", PATHNAME, (SIZE/CUT));
	  
	  pthread_t t1, t2;
	  
	  fputs("Adding random keys and values to database and searching for random keys...\n", stderr);
	  
	  fail_unless(pthread_create(&t1, NULL, randInsert, db) == 0, "Thread 1 Error");
          fail_unless(pthread_create(&t2, NULL, randFind, db) == 0, "Thread 2 Error");
	  
	  fputs("Joining threads...\n", stderr);
	  
	  fail_unless(pthread_join(t1, NULL) == 0, "Could not join thread 1");
	  fail_unless(pthread_join(t2, NULL) == 0, "Could not join thread 2");
	  
	  fputs("Multi-thread test 4 done.\n", stderr);
